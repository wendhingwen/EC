<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
          integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    @RenderSection("CSS", required: false)
    <link href="~/Assets/css/IndexStyles.css" rel="stylesheet" />
</head>
<body>
    <header class="page-header">
        <nav class="navbar navbar-expand-lg navbar-dark px-0 py-auto">
            <button class="navbar-toggler border-0 px-3" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <a class="navbar-brand m-0 px-3" href="@Url.Action("Index","Wine")" id="logo">
                <img src="~/Assets/img_Index/logo_light.png" alt="logo">
            </a>

            <div class="collapse navbar-collapse px-3" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white px-4" href="#">INSIDE THE MACALLAN</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white px-4" href="@Url.Action("ProductPage","Wine")">SHOP</a>
                    </li>
                </ul>
                <div class="input-group mr-5 px-3" id="header-search">
                    <input type="text" class="form-control text-white border-dark whiteplaceholder" placeholder="Search"
                           aria-label="Search" aria-describedby="search" id="search-input">
                    <div class="input-group-append">
                        <button class="btn btn-dark border-0 text-white font-weight-bold" type="button"
                                id="search">
                            Search
                        </button>
                    </div>
                </div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white px-3" href="@Url.Action("ShoppingCart","Wine")">
                            <i class="fas fa-shopping-bag"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white px-3" href="@Url.Action("Contact","Wine")">
                            <i class="far fa-envelope"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle px-3" href="#" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            @{
                                if (User.Identity.Name == string.Empty)
                                {
                                    @Html.ActionLink("Sign in ", "Login", new { ActionName = ViewBag.Title }, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Create account", "Register", "Account", null, new { @class = "dropdown-item" })
                                }
                                else
                                {
                                    @*<a class="dropdown-item" href="@Url.Action("SignOut","Wine")">@User.Identity.Name 登出</a>*@
                                    @Html.ActionLink(User.Identity.Name, "CustomerEdit", "Customer", new { id = User.Identity.Name }, new { @class = "dropdown-item" })
                                    @Html.ActionLink("My Account", "CustomerEdit", "Customer", new { id = User.Identity.Name }, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Sign out", "SignOut", "Wine", null, new { @class = "dropdown-item" })}
                            }

                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    @RenderBody()
    <footer class="page-footer">
        <div class="footer-email d-flex justify-content-center align-items-center text-center">
            <p class="text-white m-0">訂閱 THE MACALLAN 的最新消息</p>
            <div class="input-group ml-4" style="width: 26rem;">
                <input type="text" class="form-control text-white border-0 rounded-0 whiteplaceholder"
                       placeholder="輸入您的電子郵件地址" aria-label="input your email" aria-describedby="sub">
                <div class="input-group-append">
                    <button type="button" class="border-0 text-white font-weight-bold rounded-0" id="sub">訂閱</button>
                </div>
            </div>
        </div>
        <div class="footer-menu container-fluid my-5">
            <div class="row justify-content-around m-0 p-0">
                <div class="d-none d-lg-block">
                    <img src="~/Assets/img_Index/estate_logo.png" alt="">
                </div>
                <div>
                    <ul class="list-unstyled">
                        <li class="border-bottom border-dark mb-3" style="padding-bottom: 1.25rem;">
                            <a href="#">
                                ABOUT
                                US
                            </a>
                        </li>
                        <li class="mb-3"><a href="#">INSIDE THE MACALLAN</a></li>
                        <li class="mb-3"><a href="#">THE SIX PILLARS</a></li>
                        <li class="mb-3"><a href="#">DISTILLERY</a></li>
                        <li class="mb-3"><a href="#">CAREERS</a></li>
                        <li class="mb-3"><a href="#">CONTACT US</a></li>
                        <li class="mb-3"><a href="#">NEWSLETTER</a></li>
                    </ul>
                </div>
                <div>
                    <ul class="list-unstyled">
                        <li class="border-bottom border-dark mb-3" style="padding-bottom: 1.25rem;">
                            <a href="#">
                                OUR
                                WHISKY
                            </a>
                        </li>
                        <li class="mb-3"><a href="#">EXPLORE OUR SINGLE MALTS</a></li>
                        <li class="mb-3"><a href="#">SHERRY OAK</a></li>
                        <li class="mb-3"><a href="#">DOUBLE CASK</a></li>
                        <li class="mb-3"><a href="#">TRIPLE CASK MATURED</a></li>
                        <li class="mb-3"><a href="#">THE QUEST COLLECTION</a></li>
                        <li class="mb-3"><a href="#">THE MASTERS DECANTER SERIES</a></li>
                        <li class="mb-3"><a href="#">FINE & RARE</a></li>
                        <li class="mb-3"><a href="#">LIMITED RELEASES</a></li>
                        <li class="mb-3"><a href="#">TRAVEL RETAIL EXCLUSIVES</a></li>
                        <li class="mb-3"><a href="#">PAST RELEASES</a></li>
                    </ul>
                </div>
                <div>
                    <ul class="list-unstyled">
                        <li class="border-bottom border-dark mb-3" style="padding-bottom: 1.25rem;">
                            <a href="#">SHOP</a>
                        </li>
                        <li class="mb-3"><a href="#">FAQS</a></li>
                        <li class="mb-3"><a href="#">DELIVERY INFORMATION</a></li>
                        <li class="mb-3"><a href="#">RETURNS INFORMATION</a></li>
                        <li class="mb-3"><a href="#">CONTACT US</a></li>
                        <li class="mb-3"><a href="#">TERMS AND CONDITIONS OF SALE</a></li>
                        <li class="mb-3"><a href="#">DISTILLERY TOURS - FAQS</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-share border-bottom border-dark">
            <div class="d-flex justify-content-around mx-auto mt-3 pb-4">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
        <div class="footer-link d-flex justify-content-center mt-4">
            <a class="px-2 border-right" href="#">Drink Responsibly</a>
            <a class="px-2 border-right" href="#">The Edrington Group</a>
            <a class="px-2 border-right" href="#">Privacy Policy</a>
            <a class="px-2" href="#">Terms of Use</a>
        </div>
        <p class="text-secondary text-center my-3">&copy; 2019 The Macallan Distillers Limited, The Macallan</p>
        <img class="footer-img" src="~/Assets/img_Index/warning.svg" alt="">
    </footer>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>

    @RenderSection("JQuery", required: false)
</body>
</html>
