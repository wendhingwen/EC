@model IEnumerable<Team7MVC.Models.Orders>

@{
    ViewBag.Title = "Orders Management";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between">
                <div class="d-inline tool-left">
                    <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        訂單排序
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">訂單ID</a>
                        <a class="dropdown-item" href="#">客戶ID</a>
                        <a class="dropdown-item" href="#">訂單日期</a>
                    </div>
                </div>
                <div class="d-inline tool-right">
                    @*<i class="fas fa-plus"></i>*@
                    @Html.ActionLink("新增訂單", "Create", "", new { @class = "btn btn-success" })
                </div>
            </div>
            <div class="card">

                @*<div class="card-header">
                        <div class="d-flex justify-content-between">
                            <div class="d-inline tool-left">
                                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    商品排序
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">產品ID</a>
                                    <a class="dropdown-item" href="#">類別ID</a>
                                    <a class="dropdown-item" href="#">庫存</a>
                                </div>
                            </div>
                            <div class="d-inline tool-right">
                                <i class="fas fa-plus"></i>
                                @Html.ActionLink("新增訂單", "Create", "", new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </div>*@
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="text-center">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OrderID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CustomerID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OrderDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RequiredDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ShippedDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ShipperID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ShipName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ShipAddress)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Freight)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PayWay)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PayDate)
                                    </th>
                                    <th></th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrderID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustomerID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrderDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RequiredDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShippedDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShipperID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShipName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShipAddress)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Freight)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PayWay)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PayDate)
                                        </td>
                                        <td>
                                            @Html.ActionLink("編輯", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-primary" })
                                            @Html.ActionLink("刪除", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
