
@{
    ViewBag.Title = "Contact";
}

@section CSS
{
    <link href="~/Assets/css/ContactStyles.css" rel="stylesheet" />
}
<header class="page-header fixed-header">
    <nav class="navbar navbar-expand-lg px-0 py-auto navbar-light">
        <button class="navbar-toggler border-0 px-3" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>
        <a class="navbar-brand m-0 px-3" href="@Url.Action("Index","Wine")" id="logo">
            <img src="~/Assets/img_Index/logo_dark.png" alt="logo">
        </a>

        <div class="collapse navbar-collapse px-3" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark px-4" href="#">INSIDE THE MACALLAN</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark px-4" href="@Url.Action("ProductPage","Wine")">SHOP</a>
                </li>
            </ul>
            <div class="input-group mr-5 px-3" id="header-search">
                <input type="text" class="form-control text-white border-dark blackplaceholder" placeholder="Search"
                       aria-label="Search" aria-describedby="search" id="search-input">
                <div class="input-group-append">
                    <button class="btn btn-dark border-0 text-white font-weight-bold" type="button"
                            id="search">
                        Search
                    </button>
                </div>
            </div>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark px-3" href="@Url.Action("ShoppingCart","Wine")">
                        <i class="fas fa-shopping-bag"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark px-3" href="@Url.Action("Contact","Wine")">
                        <i class="far fa-envelope"></i>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link text-dark dropdown-toggle px-3" href="#" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        @{
                            if (User.Identity.Name == string.Empty)
                            {
                                @Html.ActionLink("登入", "Login", new { ActionName = ViewBag.Title }, new { @class = "dropdown-item" })

                            }
                            else
                            {
                                <a class="dropdown-item" href="@Url.Action("SignOut","Wine")">@User.Identity.Name 登出</a>
                            }
                        }
                        @Html.ActionLink("註冊", "Register", "Account", null, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="container text-center mt-5">
    <div class="content">
        <h2 class="mb-4">GET IN TOUCH</h2>
        <div class="full-text">
            <p>
                Whether you have a question about our products, feedback on our services, or require specific assistance from
                The
                Macallan, we want to make it as easy as possible to get the information and support you are looking for.
            </p>
            <p>
                To speak to a member of our team please call <strong>(03)588-8588</strong>. Our lines are open Monday-Friday,
                08:00
                to 18:00 UK time.
            </p>
            <p>
                Alternatively please complete the enquiry form below. We aim to respond to your enquiry within 2 working
                days.
            </p>
        </div>
    </div>
    <hr>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="input-group text-left justify-content-center">
            <div class="input-item">
                <label for="name">Name *</label>
                <input id="name" name="name" class="form-control" type="text" data-val="true"
                       data-val-required="This field is required." required="required" />
                @*<small>
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces,
                        special
                        characters, or emoji.
                    </small>*@
            </div>

            <div class="input-item">
                <label for="contact-email">CONTACT EMAIL *</label>
                <input id="contact-email" name="email" class="form-control" type="email" data-val="true"
                       data-val-required="This field is required." required="required" />
                @*<small>
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces,
                        special
                        characters, or emoji.
                    </small>*@
            </div>

            <div class="input-item">
                <label for="telephone">CONTACT TELEPHONE NUMBER</label>
                <input id="telephone" name="phone" class="form-control" type="tel" data-val="true" />
                @*<small>
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces,
                        special
                        characters, or emoji.
                    </small>*@
            </div>

            <div class="input-item">
                <label for="category">Category *</label>
                <select id="category" name="questionCategory" title="" class="PrimaryField form-control" data-val="true"
                        data-val-required="This field is required." required="required">
                    <option value="">--Please Select--</option>
                    <option value="The Macallan Online Shop">The Macallan Online Shop</option>
                    <option value="Product Information">Product Information</option>
                    <option value="Product Quality">Product Quality</option>
                    <option value="Distillery">Distillery</option>
                    <option value="Fine and Rare">Fine and Rare</option>
                    <option value="Make The Call">Make The Call</option>
                    <option value="Newsletter">Newsletter</option>
                    <option value="Working with The Macallan">Working with The Macallan</option>
                    <option value="Other">Other</option>
                </select>
                @*<small>
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces,
                        special
                        characters, or emoji.
                    </small>*@
            </div>

            <div class="input-item">
                <label for="description">Description</label>
                <textarea name="comments" class="form-control"></textarea>
                @*<small>
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces,
                        special
                        characters, or emoji.
                    </small>*@
            </div>
        </div>
        @*@Html.RenderAction("Contact");*@
        <button type="submit" class="btn btn-block" id="submit">SUBMIT</button>
    }

</div>
