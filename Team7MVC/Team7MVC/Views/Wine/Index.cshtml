@model IEnumerable<Team7MVC.Models.Customers>
@{
    ViewBag.Title = "Index";
}

@section CSS
    {
    <link href="~/Assets/css/IndexStyles.css" rel="stylesheet" />
}

<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleFade" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleFade" data-slide-to="1"></li>
        <li data-target="#carouselExampleFade" data-slide-to="2"></li>
        <li data-target="#carouselExampleFade" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Assets/img_Index/carousel01.jpg" class="d-block" alt="0">
            <div class="position-absolute text-white text-center">
                <p class="font-italic">—— M Black ——</p>
                <h2 class="my-4 font-weight-bold">水晶的黑暗面</h2>
                <p class="d-none d-lg-block mb-3">
                    The Macallan Decanter Series 中最新推出、最為繁複的 M Black
                    系列，意在彰顯色澤更濃郁、煙煄香氣更鮮明的特色
                </p>
                <a href="#" class="btn text-white font-weight-bold rounded-0 link-btn">探索</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Assets/img_Index/carousel02.jpg" class="d-block" alt="1">
            <div class="position-absolute text-white text-center">
                <p class="font-italic">—— 卓越的源泉 ——</p>
                <h2 class="my-4 font-weight-bold">創新結合傳統</h2>
                <p class="d-none d-lg-block mb-3">
                    與世界級名廚、來自 El Celler de Can Roca 的羅卡三兄弟（Roca
                    brothers）一起展開探索蘇格蘭傳統美食之旅。
                </p>
                <a href="#" class="btn text-white font-weight-bold rounded-0 link-btn">探索</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Assets/img_Index/carousel03.jpg" class="d-block" alt="2">
            <div class="position-absolute text-white text-center">
                <p class="font-italic">—— Edition No. 4 ——</p>
                <h2 class="my-4 font-weight-bold">A CELEBRATION OF THE MACALLAN'S WHISKY MAKING HERITAGE</h2>
                <p class="d-none d-lg-block mb-3">
                    This limited edition marks the coming together of our history and
                    new horizons in the creation of
                    two structural masterpieces: a remarkable whisky and a magnificent new distillery.
                </p>
                <a href="#" class="btn text-white font-weight-bold rounded-0 link-btn">DISCOVER</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Assets/img_Index/carousel04.jpg" class="d-block" alt="3">
            <div class="position-absolute text-white text-center">
                <p class="font-italic">—— 卓越的源泉 ——</p>
                <h2 class="my-4 font-weight-bold">THE MACALLAN 之家</h2>
                <p class="d-none d-lg-block mb-3">
                    我們的新酒廠與遊客體驗中心是 Speyside（斯佩塞）區第一座由國際知名建築師設計的酒廠；這座新園區開啟了一扇窗，讓您一窺 The
                    Macallan 獨一無二的威士忌釀造過程。
                </p>
                <a href="#" class="btn text-white font-weight-bold rounded-0 link-btn">探索</a>
            </div>
        </div>
    </div>
</div>
<div class="section">
    <div class="row mx-0 my-5 p-0">
        <div class="col-12 col-lg-6 text-center">
            <img src="~/Assets/img_Index/mac-2018-sherry-oak-18-yo-bottle-rgb-png-low-res-copy-2x.png" alt="" style="height: 338px;">
            <img src="~/Assets/img_Index/mac-2018-double-cask-12-yo-bottle-rgb-png-1-2x.png" alt="" style="height: 438px;">
            <img src="~/Assets/img_Index/mac-2018-sherry-oak-12-yo-bottle-rgb-png-2x.png" alt="" style="height: 558px;">
            <img src="~/Assets/img_Index/mac-2018-triple-cask-12-yo-bottle-rgb-png-copy-2x.png" alt="" style="height: 438px;">
            <img src="~/Assets/img_Index/mac-2018-triple-cask-18-yo-bottle-rgb-png-low-res-2x.png" alt=""
                 style="height: 338px;">
        </div>
        <div class="col-12 my-auto col-lg-6 mx-auto text-center">
            <div class="container">
                <p class="font-italic">── 我們的威士忌 ──</p>
                <h2 class="my-3">探索我們的單一麥芽威士忌</h2>
                <p class="mx-auto my-3">每一款 Macallan 單一麥芽威士忌均展現出自 1824 年以來，我們對於製桶與釀酒工藝無人能及的堅持。</p>
                <a href="#" class="btn font-weight-bold rounded-0 my-3 link-btn">深入探索</a>
            </div>
        </div>
    </div>
</div>
<div class="introduction">
    <div class="container">
        <div class="row p-0 m-0">
            <div class="col-12 col-lg-6 mb-4">
                <div class="card-1 d-flex align-items-end px-5">
                    <div class="content">
                        <p class="font-italic text-white">The Macallan Estate</p>
                        <h2 class="text-white">A CELEBRATION OF OUR PAST, PRESENT AND FUTURE</h2>
                        <a href="#" class="btn text-white font-weight-bold border-0 rounded-0 link-btn">EXPLORE</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6 mb-4">
                <div class="card-2 d-flex align-items-end px-5">
                    <div class="content">
                        <p class="font-italic text-white">The Macallan Estate</p>
                        <h2 class="text-white">PLAN YOUR VISIT</h2>
                        <a href="#" class="btn text-white font-weight-bold border-0 rounded-0 link-btn">EXPLORE</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row p-0 m-0">
            <div class="col-12 mb-4">
                <div class="card-3  d-flex align-items-center px-5">
                    <div class="content text-center">
                        <p class="font-italic text-white">The Macallan 三部曲</p>
                        <h2 class="text-white">源自非凡的橡木桶</h2>
                        <p class="text-white">由酒桶主導風味體驗的酒款系列，各有一段與眾不同的故事。</p>
                        <a href="#" class="btn text-white font-weight-bold border-0 rounded-0 link-btn">EXPLORE</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="special d-flex align-items-center justify-content-center">
    <div class="content text-center">
        <p class="font-italic text-white">── 六大標柱 ──</p>
        <h2 class="text-white">特色風味深入心坎</h2>
        <p class="text-white">
            這六大標柱是我們一切作為的基石。無論是釀酒廠址還是釀酒流程、釀酒人員還是釀酒熱情，The Macallan
            獨特醇酒的背後都由這六大標柱所支撐。
        </p>
        <a href="#" class="btn text-white font-weight-bold rounded-0 link-btn">進一步閱讀</a>
    </div>
</div>

@section JQuery
{
<script>
    $(function () {
        $(window).scroll(function () {
            var scrollVal = $(this).scrollTop();
            if (scrollVal > 0) {
                $("header").addClass("fixed-header");
                $("header nav")
                    .removeClass("navbar-dark")
                    .addClass("navbar-light");
                $("header a img").prop("src", "../Assets/img_Index/logo_dark.png");
                $("header .nav-item > a")
                    .removeClass("text-white")
                    .addClass("text-dark");
                $("#search-input")
                    .removeClass("whiteplaceholder")
                    .removeClass("text-white")
                    .addClass("blackplaceholder")
                    .addClass("text-dark");
            }
            if (scrollVal == 0) {
                $("header").removeClass("fixed-header");
                $("header nav")
                    .removeClass("navbar-light")
                    .addClass("navbar-dark");
                $("header a img").prop("src", "../Assets/img_Index/logo_light.png");
                $("header .nav-item > a")
                    .removeClass("text-dark")
                    .addClass("text-white");
                $("#search-input")
                    .removeClass("blackplaceholder")
                    .removeClass("text-dark")
                    .addClass("whiteplaceholder")
                    .addClass("text-white");
            }
        });
    });
</script>
}